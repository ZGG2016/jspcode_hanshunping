<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>GoHallUI</servlet-name>
        <servlet-class>com.example.myshopping.controller.GoHallUI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoHallUI</servlet-name>
        <url-pattern>/gohallui</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShoppingClServlet</servlet-name>
        <servlet-class>com.example.myshopping.controller.ShoppingClServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShoppingClServlet</servlet-name>
        <url-pattern>/shoppingclservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoMyOrderServlet</servlet-name>
        <servlet-class>com.example.myshopping.controller.GoMyOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoMyOrderServlet</servlet-name>
        <url-pattern>/gomyorderservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmitOrderServlet</servlet-name>
        <servlet-class>com.example.myshopping.controller.SubmitOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitOrderServlet</servlet-name>
        <url-pattern>/submitorderservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoShowMyCart</servlet-name>
        <servlet-class>com.example.myshopping.controller.GoShowMyCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoShowMyCart</servlet-name>
        <url-pattern>/goshowmycart</url-pattern>
    </servlet-mapping>
</web-app>